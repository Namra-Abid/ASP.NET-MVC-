<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div>
        @helper MyListHelper(string[] any_str_array)
        {
            if (any_str_array.Length == 0)
            {
                <h4>Array is Empty</h4>
            }
            else
            {
                <ul>
                    @foreach (var item in any_str_array)
                    {
                        <li>
                            @item
                        </li>
                    }
                </ul>
                <ul>
                    @for (int i = 0; i < any_str_array.Length; i++)
                    {
                    <li>@any_str_array[i]</li>
                    }

                </ul>
                
            }

        }

    </div>
    @MyListHelper(new string[] {"English","Maths","Science","SST"})
</body>
</html>